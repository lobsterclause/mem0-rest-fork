# API Settings
API_VERSION=v1
API_PREFIX=/api
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=1

# CORS Settings
CORS_ORIGINS=["http://localhost:3000"]
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Authentication Settings
JWT_SECRET=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting Settings
HTTP_RATE_LIMIT=100
WS_RATE_LIMIT=50
RATE_LIMIT_WINDOW=60

# OpenAI Settings
OPENAI_API_KEY=your-openai-key-here

# Qdrant Settings
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Neo4j Settings
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password-here

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json
# LOG_FILE=logs/app.log  # Uncomment to enable file logging

# Memory Settings
MEMORY_VERSION=v1.1
MEMORY_EMBEDDER_MODEL=text-embedding-ada-002
MEMORY_LLM_MODEL=gpt-4
MEMORY_LLM_TEMPERATURE=0.7
MEMORY_COLLECTION_NAME=memories
MEMORY_DATABASE_NAME=neo4j

# Development Settings
PYTHONPATH=/app
PYTHONUNBUFFERED=1
